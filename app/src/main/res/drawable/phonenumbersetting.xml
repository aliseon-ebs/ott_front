<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
          android:drawable="@drawable/phonenumbershape"
            android:textColor = "@color/colorWhite"/> <!-- pressed -->
    <item android:state_focused="true"
          android:drawable="@drawable/phonenumberfocused"
          android:textColor = "@color/colorFocusButton"/> <!-- focused -->
    <item android:state_hovered="true"
          android:drawable="@drawable/phonenumbershape"
          android:textColor = "@color/colorWhite"/> <!-- hovered -->
    <item android:drawable="@drawable/phonenumbershape"
          android:textColor = "@color/colorWhite"/> <!-- default -->
</selector>